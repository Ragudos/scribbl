{
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node10",
      "module": "ESNext",
      "esModuleInterop": true,
    },
  },
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "Node10",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}